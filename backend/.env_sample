# External API Keys
FINNHUB_API_KEY=your_api_key_here

POLYGON_API_KEY=your_api_key_here

# CORS Configuration (comma-separated list)
# Production: https://invest-ed-samwise.vercel.app
# Development: http://localhost:3000,http://127.0.0.1:3000
# Combined: https://invest-ed-samwise.vercel.app,http://localhost:3000,http://127.0.0.1:3000
ALLOWED_ORIGINS=https://invest-ed-samwise.vercel.app,http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
# Local Docker: jdbc:postgresql://localhost:5432/invested
# Supabase: Use connection string from Supabase dashboard
DATABASE_URL=jdbc:postgresql://localhost:5432/invested
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# JPA Configuration
# Options: none, validate, update, create, create-drop
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# Clerk JWT Verification
# Get JWKS URL from Clerk Dashboard > Configure > JWT Templates
# Format: https://your-instance.clerk.accounts.dev/.well-known/jwks.json
# Or use: https://<your-frontend-api-url>/.well-known/jwks.json
CLERK_JWKS_URL=your_clerk_jwks_url_here